<div class="flex justify-center">
  <div class="col-auto">
    <h2></span>Create a Post</span></h2>
  </div>
</div>
    <form class="form new-post-form">
      <div class="form-group flex justify-center">
        <input class="form-input text-center" type="text" id="post-title" name="post-title" placeholder="Post Title" />
      </div>
      <div class="form-group flex justify-center">
        <textarea class="form-input text-center" id="post-desc" name="post-desc" placeholder="Post Content"></textarea>
      </div>
      <div class="form-group flex justify-center">
        <button type="submit" class="btn btn-primary text-[#3b82f6] text-xl">Create Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3 class="flex justify-center">My Tech Posts:</h3>
    

  {{#each posts as |post|}}
    <div class="postDesc">
      <p class="text-center postDescMain">
        <div class="flex justify-center">
          Title: {{post.title}}
        </div>
        <div class="flex justify-center">
          {{post.content}}
        </div>       
      </p>
    </div>

    <div class="row mb-2">
      <div class="col-md-4 flex justify-center">
        <button class="btn btn-danger text-[#3b82f6] text-xl" data-id="{{post.id}}">Delete Post</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>